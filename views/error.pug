html
  head
    meta(charset="utf-8")
    title= title
    link(rel="stylesheet", href="/public/css/style.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css")
  body
    header
      h1
        i.fas.fa-exclamation-triangle
        |  #{title}
      nav
        a(href="/")
          i.fas.fa-home
          |  Главная
        a(href="/books")
          i.fas.fa-book
          |  Книги
    
    main
      .error-container
        .error-icon
          i.fas.fa-exclamation-circle
        h2= message
        a.btn.btn-primary(href="/books")
          i.fas.fa-arrow-left
          |  Вернуться к книгам